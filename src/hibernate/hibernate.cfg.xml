<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hbm2ddl.auto">update</property>
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="connection.url">jdbc:mysql://localhost/autoparts_store</property>
        <property name="connection.username">java_interface</property>
        <property name="connection.password">Randomness</property>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <!--<mapping resource="hibernate/role.hbm.xml"/>-->
        <mapping class="com.company.Objects.Employee"/>
        <!--<mapping resource="hibernate/user.hbm.xml"/>-->
        <mapping class="com.company.Objects.Emp_pos"/>
    </session-factory>
</hibernate-configuration>